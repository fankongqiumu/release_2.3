<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:gravity="bottom"
    >

    <!-- 发消息 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_send_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 插件中心 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_viewer_plugins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/menu_live_bottom_podcast_order"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/base_p_m_5"
        android:src="@drawable/ic_live_bottom_podcast_order"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/menu_shop_ic_my_store"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/base_p_m_5"
        android:src="@drawable/shop_ic_my_store"
        android:visibility="gone"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <!-- 竞拍订单支付 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_viewer_auction_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_apply_banker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 显示隐藏插件 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_plugin_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 私聊消息 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_private_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 连麦 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_invite_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <!-- 礼物 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_send_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 分享 -->
    <com.fanwe.live.appview.room.RoomMenuView
        android:id="@+id/menu_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>